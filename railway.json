{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd DataPilot/DataPilot && npm install && npx prisma generate && npm run build",
    "watchPatterns": [
      "DataPilot/DataPilot/**"
    ]
  },
  "deploy": {
    "startCommand": "cd DataPilot/DataPilot && npx prisma migrate deploy && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "$PORT"
      }
    }
  }
}